@model Emarketing.ViewModel.AddViewModel
@{
    ViewBag.Title = "ViewAdds";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    td {
        padding: 20px;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12">
        <img src="~/Content/img/14560020750060463280.png" class="img img-responsive" style="width:100%" />
    </div>
</div>

<div class="row">

    <div class="col-lg-2 col-md-2">
        <img src="~/Content/img/adlisting2.gif" class="img img-responsive" style=" height:500px;" />
    </div>



    <div class="col-lg-8 col-md-8">

        <div>
                <h1>@Model.ProductName <small>AD-ID:@Model.ProductID</small></h1>
            </div>

            <img src="@Url.Content(@Model.ProductImage)" style="width:600PX; height:450PX" />

            <div>
                <h1>Description: </h1>
                <p>@Model.ProductDiscription</p>
            </div>

            <table>

                <tr> <td>Price: </td> <td>@Model.ProductPrice </td> </tr>
                <tr> <td>Category: </td> <td>@Model.CategoryName </td> </tr>
                <tr> <td>Posted by: </td> <td>@Model.UserName <img src="@Url.Content(@Model.UserImage)" style="width:40px; height:40px" /> </td> </tr>
                <tr> <td>Contact: </td> <td>@Model.UserContact  </td> </tr>
                <tr>
                    <td colspan="2">
                        @if (Convert.ToInt32(Session["UserID"]) == Convert.ToInt32(Model.FK_User))
                        {
                        

                            @Html.ActionLink("Close this Ad", "DeleteAd", new { @class = "btn btn-info", id = Model.ProductID })
                            }


                        
                    </td>
                </tr>

            </table>



    </div>




    <div class="col-lg-2 col-md-2">
        <img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style=" height:500px;" />
    </div>


</div>

